void main()
{int opcion;
system("color 3F");
do{
cout<<"\n\t\t                                    \t\n";
cout<<"\n\t\t     Bienvenido a Mundo Verde \t\n";
cout<<"\n\t\t ================================== \t\n";
cout<<"\n\t\t 1.- Informacion sobre mundo verde \n";
cout<<"\n\t\t 2.- Tipos de basura \n";
cout<<"\n\t\t 3.- Que pasa con lo que reciclo? \n";
cout<<"\n\t\t 4.- Curiosidades del reciclaje \n";
cout<<"\n\t\t 5.- Ubicacion del camion de basura \n";
cout<<"\n\t\t 0.- Salir\n";
cout<<"\n\t\t Elige una opcion: \n";
cin>>opcion;
system ("cls");
switch(opcion){
case 1: infoapp ();
break;
case 2: infobasu ();
break;
case 3: inforeci ();
break;
case 4: curiosidades();
break;
case 5:ubitrash ();
break;
case 0: ;break;
default: cout<<"Opcion invalida\n";
}
getch ();
system ("cls");
}
while (opcion!=0);
getch ();
}

void infoapp ()
{ cout<<"\n\tINFORMACION SOBRE LA APP"<<endl;
