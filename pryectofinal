system ("cls");
switch(opcion){
case 1: separarbasura();
break;
case 2: cout<<"hola";
break;
case 0: cout<<"hola";
break;
default: cout<<"Opcion invalida\n";
}
system ("cls");
}
while (opcion!=0);
getch ();
}

