switch(opcion){
case 1: infoapp ();
break;
case 2: infobasu ();
break;
case 3: inforeci ();
break;
case 4:ubitrash ();
break;
case 0: ;break;
default: cout<<"Opcion invalida\n";
}
getch ();
system ("cls");
}
while (opcion!=0);
getch ();
}

