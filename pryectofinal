cout<<"\n\t\t 4.- Ubicacion del camion de basura \n";
cout<<"\n\t\t 0.- Salir\n";
cout<<"\n\t\t Elige una opcion: \n";
cin>>opcion;
system ("cls");
switch(opcion){
case 1: infoapp ();
break;
case 2: infobasu ();
break;
case 3: inforeci ();
break;
case 4:ubitrash ();
break;
case 0: ;break;
default: cout<<"Opcion invalida\n";
}
getch ();
system ("cls");
}
while (opcion!=0);
getch ();
}

