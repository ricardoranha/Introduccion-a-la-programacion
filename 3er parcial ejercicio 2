float potencia(float base, int exponente)
{float x;
 int i;
 x=1;
 for(i=1;i<=exponente;i++)
	 x=x*base;
 return x;
}

void suma(float base, float n, float &resul)
{int a=1,i;
 resul=0;
 for(i=1;i<=n;i++)
	resul=resul+potencia(base,i);
}
